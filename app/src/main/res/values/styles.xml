<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hour_blue</item>
        <item name="colorPrimaryDark">@color/status_bar_dim</item>
        <item name="colorAccent">@color/hour_red</item>
        <item name="colorSurface">@color/gray_0</item>
        <item name="android:windowBackground">@color/gray_0</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TimeSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/hour_blue</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/gray_5</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/gray_7</item>
    </style>

</resources>